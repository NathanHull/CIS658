<p id="notice"><%= notice %></p>

<div class="title">
    <h1>Bugs</h1>
</div>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Issue type</th>
      <th>Priority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.user.fname + ' ' + bug.user.lname %></td>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.issue_type %></td>
        <td><%= bug.priority %></td>
        <td><%= bug.status %></td>
        <td><%= link_to 'Show', bug, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_bug_path(bug), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', bug, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="centerAlign">
    <%= button_to 'New Bug', new_bug_path, :class => "btn btn-primary", :method => :get %></button>
</div>
